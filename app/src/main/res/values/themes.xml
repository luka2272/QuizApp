<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.QuizApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/status</item>

        <item name="colorPrimary">@color/material_dynamic_primary50</item>
        <item name="colorPrimaryVariant">@color/material_dynamic_primary70</item>
        <item name="colorOnPrimary">@color/bg_white</item>
        <item name="colorSecondary">@color/material_dynamic_secondary20</item>
        <item name="colorSecondaryVariant">@color/material_dynamic_secondary70</item>
        <item name="colorOnSecondary">@color/bg_black</item>
        <item name="colorSecondaryContainer">?attr/colorSecondary</item>
        <item name="colorOnSecondaryContainer">?attr/colorOnSecondary</item>
        <item name="colorOnSurfaceVariant">@color/nav_tab</item>
        <item name="colorSurfaceBright">@android:color/holo_green_light</item>
        <item name="colorSurfaceDim">@android:color/holo_red_light</item>
        <item name="android:colorPressedHighlight">@color/material_dynamic_primary95</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:textColor">@color/bg_black</item>
    </style>

    <style name="Theme.QuizApp" parent="Base.Theme.QuizApp" />
</resources>